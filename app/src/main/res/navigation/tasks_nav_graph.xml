<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasks_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ch.protonmail.android.protonmailtest.presentation.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_taskDetailsFragment"
            app:destination="@id/taskDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailsFragment"
        android:name="ch.protonmail.android.protonmailtest.presentation.taskdetails.TaskDetailsFragment"
        android:label="TaskDetailsFragment" >
        <argument
            android:name="task"
            app:argType="ch.protonmail.android.protonmailtest.data.Task" />
    </fragment>
</navigation>