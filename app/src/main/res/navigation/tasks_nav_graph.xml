<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tasks_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ch.protonmail.android.protonmailtest.presentation.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_taskDetailsFragment"
            app:destination="@id/taskDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailsFragment"
        android:name="ch.protonmail.android.protonmailtest.presentation.tasks.details.TaskDetailsFragment"
        android:label="TaskDetailsFragment">
        <argument
            android:name="task"
            app:argType="ch.protonmail.android.protonmailtest.presentation.tasks.TaskUIEntity" />
    </fragment>
</navigation>